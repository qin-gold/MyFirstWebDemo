<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--项目名称-->
    <display-name>MyFirstDemo</display-name>
    <request-character-encoding>utf-8</request-character-encoding>
    <response-character-encoding>utf-8</response-character-encoding>

    <!--配置监听器-->
    <listener>
        <listener-class>com.wlf.web.listener.StartListener</listener-class>
    </listener>

    <!--session管理-->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    
<!--    <servlet>-->
<!--        <servlet-name>loginServlet</servlet-name>-->
<!--        <servlet-class>com.wlf.web.servlet.login.LoginAccountServlet</servlet-class>-->
<!--    </servlet>-->
<!--    <servlet-mapping>-->
<!--        <servlet-name>loginServlet</servlet-name>-->
<!--        <url-pattern>/login</url-pattern>-->
<!--    </servlet-mapping>-->
    
    <!--默认页面配置-->
    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/pages/error/500.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/pages/error/403.html</location>
    </error-page>
</web-app>