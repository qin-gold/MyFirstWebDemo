<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--项目名称-->
    <display-name>MyFirstDemo</display-name>
    <request-character-encoding>utf-8</request-character-encoding>
    <response-character-encoding>utf-8</response-character-encoding>
    
    <!--session管理-->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    <!--配置前端控制器-->
    <servlet>
        <servlet-name>dispatchServlet</servlet-name>
        <servlet-class>com.wlf.core.web.base.core.DispatchServlet</servlet-class>
        <init-param>
            <param-name>application</param-name>
            <param-value>jettyConfig.properties</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatchServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <!--全局异常页面-->
    <error-page>
        <error-code>500</error-code>
        <location>/src/web/WEB-INF/pages/error/500.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/src/web/WEB-INF/pages/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/src/web/WEB-INF/pages/error/403.html</location>
    </error-page>
</web-app>